@inherits LayoutComponentBase

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudContainer MaxWidth="MaxWidth.Small" Class="pa-4">
    <MudPaper Elevation="4" Class="pa-6" Style="max-width: 400px; margin: auto; margin-top: 5vh;">
        <MudText Typo="Typo.h4" Align="Align.Center" Class="mb-4">@Title</MudText>

        <MudContainer>
            @Body
        </MudContainer>

        <MudText Typo="Typo.body2" Align="Align.Center" Class="mt-4">
            TaskMaster - Your reliable task management solution.
        </MudText>
    </MudPaper>
</MudContainer>

@code {
    [Parameter]
    public string Title { get; set; } = "Welcome";
}
