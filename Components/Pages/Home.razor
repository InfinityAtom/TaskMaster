@page "/"
@using MudBlazor
@inject NavigationManager NavigationManager

<MudContainer MaxWidth="MaxWidth.Large" Class="dashboard-container">
    <!-- Centered Logo Section -->
    <div class="logo-container">
        <img src="logo.png" alt="TaskMaster Logo" class="login-logo" />
    </div>
    
    <MudText Typo="Typo.subtitle1" Align="Align.Center" Class="dashboard-subtitle">
        Navigate through your tasks, view reports, manage settings, and more.
    </MudText>

    <!-- Main Dashboard Cards -->
    <MudGrid GutterSize="GutterSize.Medium" Class="dashboard-grid">

        <!-- My Tasks Card -->
        <MudItem xs="12" sm="12" md="6" lg="4">
            <MudPaper Class="dashboard-card" Elevation="3" OnClick="() => NavigateTo('/tasks')">
                <MudIcon Icon="@Icons.Material.Filled.ListAlt" Size="Size.Large" Class="dashboard-icon" />
                <MudText Typo="Typo.h6" Class="mt-2">My Tasks</MudText>
                <MudText Typo="Typo.body2" Class="dashboard-description">Manage your tasks, mark them complete, or view pending tasks.</MudText>
            </MudPaper>
        </MudItem>

        <!-- Calendar Card -->
        <MudItem xs="12" sm="12" md="6" lg="4">
            <MudPaper Class="dashboard-card" Elevation="3" OnClick="() => NavigateTo('/calendar')">
                <MudIcon Icon="@Icons.Material.Filled.CalendarToday" Size="Size.Large" Class="dashboard-icon" />
                <MudText Typo="Typo.h6" Class="mt-2">Calendar</MudText>
                <MudText Typo="Typo.body2" Class="dashboard-description">View all tasks and deadlines on your calendar.</MudText>
            </MudPaper>
        </MudItem>

        <!-- Reports Card -->
        <MudItem xs="12" sm="12" md="6" lg="4">
            <MudPaper Class="dashboard-card" Elevation="3" OnClick="() => NavigateTo('/reports')">
                <MudIcon Icon="@Icons.Material.Filled.Assessment" Size="Size.Large" Class="dashboard-icon" />
                <MudText Typo="Typo.h6" Class="mt-2">Reports</MudText>
                <MudText Typo="Typo.body2" Class="dashboard-description">Analyze your task completion and productivity reports.</MudText>
            </MudPaper>
        </MudItem>

        <!-- Settings Card -->
        <MudItem xs="12" sm="12" md="6" lg="4">
            <MudPaper Class="dashboard-card" Elevation="3" OnClick="() => NavigateTo('/settings')">
                <MudIcon Icon="@Icons.Material.Filled.Settings" Size="Size.Large" Class="dashboard-icon" />
                <MudText Typo="Typo.h6" Class="mt-2">Settings</MudText>
                <MudText Typo="Typo.body2" Class="dashboard-description">Adjust your profile, preferences, and security settings.</MudText>
            </MudPaper>
        </MudItem>

        <!-- Help Card -->
        <MudItem xs="12" sm="12" md="6" lg="4">
            <MudPaper Class="dashboard-card" Elevation="3" OnClick="() => NavigateTo('/help')">
                <MudIcon Icon="@Icons.Material.Filled.HelpOutline" Size="Size.Large" Class="dashboard-icon" />
                <MudText Typo="Typo.h6" Class="mt-2">Help</MudText>
                <MudText Typo="Typo.body2" Class="dashboard-description">Find answers to common questions and get support.</MudText>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>

<style>
    .dashboard-container {
        padding: 24px;
    }

    .logo-container {
        display: flex;
        justify-content: center;
        margin-bottom: 20px;
    }

    .login-logo {
        width: 300px;
    }

    .dashboard-subtitle {
        font-size: 1rem;
        color: #888888;
        margin-bottom: 24px;
    }

    .dashboard-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 16px;
    }

    .dashboard-card {
        padding: 24px;
        text-align: center;
        cursor: pointer;
        transition: box-shadow 0.3s ease;
        border-radius: 12px;
        background-color: #f9f9f9;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

    .dashboard-card:hover {
        box-shadow: 0px 6px 20px rgba(0, 0, 0, 0.15);
        transform: translateY(-2px);
    }

    .dashboard-icon {
        color: #1976d2;
        margin-bottom: 8px;
    }

    .dashboard-description {
        color: #666;
        font-size: 0.9rem;
        margin-top: 8px;
    }
</style>

@code {
    private void NavigateTo(string url) => NavigationManager.NavigateTo(url);
}
