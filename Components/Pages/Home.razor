@page "/"
@using MudBlazor
@inject NavigationManager NavigationManager

<MudContainer MaxWidth="MaxWidth.Large" Class="dashboard-container">
    <!-- Centered Logo Section -->
    <div class="logo-container">
        <img src="logo.png" alt="TaskMaster Logo" class="login-logo" />
    </div>

    <MudText Typo="Typo.subtitle1" Align="Align.Center" Class="dashboard-subtitle">
        Navigate through your tasks, view reports, manage settings, and more.
    </MudText>

    <!-- Main Dashboard Navigation Buttons -->
    <MudGrid GutterSize="GutterSize.Medium" Class="dashboard-grid">

        <!-- My Tasks Button -->
        <MudItem xs="12" sm="12" md="6" lg="4">
            <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="dashboard-button" Href="/tasks">
                <MudIcon Icon="@Icons.Material.Filled.ListAlt" Size="Size.Large" Class="dashboard-icon" />
                <div>
                    <MudText Typo="Typo.h6">My Tasks</MudText>
                    <MudText Typo="Typo.body2" Class="dashboard-description">Manage your tasks, mark them complete, or view pending tasks.</MudText>
                </div>
            </MudButton>
        </MudItem>

        <!-- Calendar Button -->
        <MudItem xs="12" sm="12" md="6" lg="4">
            <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="dashboard-button" Href="/calendar">
                <MudIcon Icon="@Icons.Material.Filled.CalendarToday" Size="Size.Large" Class="dashboard-icon" />
                <div>
                    <MudText Typo="Typo.h6">Calendar</MudText>
                    <MudText Typo="Typo.body2" Class="dashboard-description">View all tasks and deadlines on your calendar.</MudText>
                </div>
            </MudButton>
        </MudItem>

        <!-- Share Task -->
        <MudItem xs="12" sm="12" md="6" lg="4">
            <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="dashboard-button" Href="/share-task">
                <MudIcon Icon="@Icons.Material.Filled.Email" Size="Size.Large" Class="dashboard-icon" />
                <div>
                    <MudText Typo="Typo.h6">Share a task through email</MudText>
                    <MudText Typo="Typo.body2" Class="dashboard-description">Share a task to someone.</MudText>
                </div>
            </MudButton>
        </MudItem>

        <!-- Settings Button -->
        <MudItem xs="12" sm="12" md="6" lg="4">
            <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="dashboard-button" Href="/settings">
                <MudIcon Icon="@Icons.Material.Filled.Settings" Size="Size.Large" Class="dashboard-icon" />
                <div>
                    <MudText Typo="Typo.h6">Settings</MudText>
                    <MudText Typo="Typo.body2" Class="dashboard-description">Adjust your profile, preferences, and security settings.</MudText>
                </div>
            </MudButton>
        </MudItem>

        <!-- Help Button -->
        <MudItem xs="12" sm="12" md="6" lg="4">
            <MudButton Href="/help" Variant="Variant.Filled" Color="Color.Primary" Class="dashboard-button" >
                <MudIcon Icon="@Icons.Material.Filled.HelpOutline" Size="Size.Large" Class="dashboard-icon" />
                <div>
                    <MudText Typo="Typo.h6">Help</MudText>
                    <MudText Typo="Typo.body2" Class="dashboard-description">Find answers to common questions and get support.</MudText>
                </div>
            </MudButton>
        </MudItem>
    </MudGrid>
</MudContainer>

<style>
    .dashboard-container {
        padding: 24px;
    }

    .logo-container {
        display: flex;
        justify-content: center;
        margin-bottom: 20px;
    }

    .login-logo {
        width: 300px;
    }

    .dashboard-subtitle {
        font-size: 1rem;
        color: #888888;
        margin-bottom: 24px;
    }

    .dashboard-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 16px;
    }

    .dashboard-button {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        width: 100%;
        padding: 24px;
        border-radius: 12px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

        .dashboard-button:hover {
            transform: translateY(-2px);
            box-shadow: 0px 6px 20px rgba(0, 0, 0, 0.15);
        }

    .dashboard-icon {
        color: white;
        margin-bottom: 12px;
    }

    .dashboard-description {
        color: white;
        font-size: 0.9rem;
    }
</style>

@code {
    private void NavigateTo(string url) => NavigationManager.NavigateTo(url);
}

